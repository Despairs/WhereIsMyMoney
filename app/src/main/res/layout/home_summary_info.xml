<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="info"
            type="org.despairs.wmm.ui.home.entity.SummaryPaycheckInfo" />
    </data>

    <LinearLayout
        android:id="@+id/home_summary_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:id="@+id/home_summary_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_summary_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{info.billingPeriod}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/home_summary_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@{info.amount}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/secondary_text_light" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/paycheck_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.home.HomeFragment"
            tools:listitem="@layout/home_summary_info_paycheck" />

    </LinearLayout>

</layout>